{
  "name": "iNsalt",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Encrypt your passwords",
  "icons": {
    "16": "assets/salt.png",
    "48": "assets/saltbae-color.png",
    "128": "assets/saltbae-color.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "options_page": "dist/options.html",
  "options_ui": {
    "page": "dist/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Options"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/inject.js"
      ]
    }
  ]
}